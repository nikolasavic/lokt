#!/bin/bash
#
# Pre-commit hook for lokt
#
# Checks:
# 1. Go formatting (gofmt)
# 2. Go linting (golangci-lint)
# 3. Beads flush (if bd available)
#

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo_error() { echo -e "${RED}ERROR:${NC} $1" >&2; }
echo_warn() { echo -e "${YELLOW}WARNING:${NC} $1" >&2; }
echo_ok() { echo -e "${GREEN}OK:${NC} $1"; }

# Get repo root
REPO_ROOT="$(git rev-parse --show-toplevel)"
cd "$REPO_ROOT"

# =============================================================================
# 1. Go Formatting Check
# =============================================================================

# Find Go files that are staged
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$' || true)

if [[ -n "$STAGED_GO_FILES" ]]; then
    # Check formatting
    UNFORMATTED=$(gofmt -l $STAGED_GO_FILES 2>/dev/null || true)

    if [[ -n "$UNFORMATTED" ]]; then
        echo_error "The following files are not formatted:"
        echo "$UNFORMATTED"
        echo ""
        echo "Run: gofmt -w $UNFORMATTED"
        exit 1
    fi
    echo_ok "Go formatting"
fi

# =============================================================================
# 2. Go Linting (only if golangci-lint available)
# =============================================================================

if command -v golangci-lint >/dev/null 2>&1; then
    if [[ -n "$STAGED_GO_FILES" ]]; then
        # Run linter on staged files only (faster)
        if ! golangci-lint run --new-from-rev=HEAD~1 --timeout=2m ./... 2>/dev/null; then
            # Fallback: run on all files if new-from-rev fails
            if ! golangci-lint run --timeout=2m ./...; then
                echo_error "Linting failed"
                exit 1
            fi
        fi
        echo_ok "Go linting"
    fi
else
    echo_warn "golangci-lint not found, skipping lint check"
fi

# =============================================================================
# 3. Beads Flush (if bd available)
# =============================================================================

if command -v bd >/dev/null 2>&1; then
    # Check if we're in a bd workspace
    BEADS_DIR=""
    if git rev-parse --git-dir >/dev/null 2>&1; then
        if [ "$(git rev-parse --git-dir)" != "$(git rev-parse --git-common-dir)" ]; then
            MAIN_REPO_ROOT="$(git rev-parse --git-common-dir)"
            MAIN_REPO_ROOT="$(dirname "$MAIN_REPO_ROOT")"
            if [ -d "$MAIN_REPO_ROOT/.beads" ]; then
                BEADS_DIR="$MAIN_REPO_ROOT/.beads"
            fi
        else
            if [ -d .beads ]; then
                BEADS_DIR=".beads"
            fi
        fi
    fi

    if [[ -n "$BEADS_DIR" ]]; then
        if ! bd sync --flush-only >/dev/null 2>&1; then
            echo_error "Failed to flush bd changes"
            exit 1
        fi

        # Stage the JSONL if modified (only in regular repo, not worktree)
        if [ -f "$BEADS_DIR/issues.jsonl" ]; then
            if [ "$(git rev-parse --git-dir)" = "$(git rev-parse --git-common-dir)" ]; then
                git add "$BEADS_DIR/issues.jsonl" 2>/dev/null || true
            fi
        fi
        echo_ok "Beads flushed"
    fi
fi

exit 0
